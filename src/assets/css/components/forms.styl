input[type="text"], textarea
  display: block
  width: 100%
  height: 42px
  line-height: 43px
  text-indent: 9px
  outline: none
  border: none
  background-color: rgba(147, 147, 147, 0.3)
  + input[type="text"]
    margin-top: 18px
    
textarea
  height: 30vh
  margin-top: 18px
  padding-top: 9px
  
input[type="submit"], input[type="reset"]
  display: block
  float: right
  background-color: rgba(147, 147, 147, 0.3)
  margin-top: 18px
  margin-left: 18px
  width: 100px
  height: 42px
  line-height: 43px
  outline: none
  -webkit-appearance: none
  appearance: none
  border: none
  
input[type="submit"]:active , input[type="reset"]:active
  background-color: rgba(147, 147, 147, 0.7)